<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dispositivosmoviles.obligatorio.opticompras.MenuActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_alignParentEnd="false">

        <ImageButton
            android:layout_width="171dp"
            android:layout_height="142dp"
            android:id="@+id/btnMapa"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/web_browser"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="verMapa"
            android:focusable="true"
            android:baselineAlignBottom="false"
            android:contextClickable="false" />

        <ImageButton
            android:layout_width="171dp"
            android:layout_height="142dp"
            android:id="@+id/btnBuscar"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/find"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:onClick="buscarArticulos" />

        <ImageButton
            android:layout_width="171dp"
            android:layout_height="142dp"
            android:id="@+id/btnHistorial"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/history"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:layout_width="171dp"
            android:layout_height="142dp"
            android:id="@+id/btnPerfil"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/account_and_control"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true" />

    </GridLayout>
</RelativeLayout>
